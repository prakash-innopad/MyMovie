@page "/Gen"
<h3>Generator</h3>
<div class="text-success h3"> title</div>
<button @onclick="NumberGenerator" class="btn btn-dark">Generate Number</button>
@if (Number > 0)
    {
    <p class="p-2">Number: @Number</p>
    }
@code {
    public int Number { get; set; } = 0;

    private void NumberGenerator()
        {
        Random rnd = new();
        Number = rnd.Next(1, 100);
        }
}
